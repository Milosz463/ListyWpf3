<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <DataGrid ItemsSource="{Binding ProduktList}"/>
        <DataGrid ItemsSource="{Binding ProduktList}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="nazwa produktu" Binding="{Binding nazwa}"></DataGridTextColumn>
                <DataGridCheckBoxColumn Header="czy produkt jest dostepny" Binding="{Binding dsotepnosc}"></DataGridCheckBoxColumn>
                <DataGridComboBoxColumn Header="kategoria produktu" x:Name="kategoria"  SelectedValueBinding="{Binding kategoria}"></DataGridComboBoxColumn>
            </DataGrid.Columns>
         </DataGrid>
        <TextBlock>Formularz dodawania nowego produktu</TextBlock>
        <Label Content="NazwaProduktu"></Label>
        <TextBox x:Name="nazwaTextBox"></TextBox>
        <Label Content="dostepnosc"></Label>
        <CheckBox x:Name="dostepnosc"></CheckBox>
        <Label Content="kategoria"></Label>
        <ComboBox x:Name="kategoriaa"  ></ComboBox>
        <Button Click="Button_Click">Dodaj</Button>
   </StackPanel>
</Window>
